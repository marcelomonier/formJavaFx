<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.control.Button?>

<GridPane hgap="20" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="javafx.personform.PersonController">
   <children>
   	<Label text="Name:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
       <TextField fx:id="nameField" 
       onFocusedChange="#nameFieldFocusChange" 
       onTextChange="#nameFieldChange" 
       prefColumnCount="30" promptText="Name" 
       GridPane.columnIndex="1" GridPane.rowIndex="0" />
   	<Label fx:id="nameFieldRule" 
   	text="Names can only contain letters, space ..." 
   	visible="false" GridPane.columnIndex="2" GridPane.rowIndex="0" />
   	<Label text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
       <TextField fx:id="emailField" 
       onTextChange="#emailFieldChange" 
       prefColumnCount="30" promptText="Email" 
       GridPane.columnIndex="1" GridPane.rowIndex="1" />
   </children>
   <columnConstraints>
      <ColumnConstraints />
      <ColumnConstraints />
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>
</GridPane>
